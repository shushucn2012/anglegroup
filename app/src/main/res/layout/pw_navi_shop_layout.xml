<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menuview_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

       <!-- <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="6dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:scaleType="fitXY"
                android:src="@drawable/jianjian" />
        </LinearLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-1dp"
            android:background="@drawable/rec_white_stroke_white_solid_corner5"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/area_meinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="25dp"
                    android:gravity="center|left">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/icon_menu_info" />

                    <TextView
                        style="@style/text_33315_style"
                        android:layout_marginLeft="12dp"
                        android:text="个人信息" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/area_to_msg"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="25dp"
                android:gravity="center|left">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_menu_message" />

                <TextView
                    style="@style/text_33315_style"
                    android:layout_marginLeft="12dp"
                    android:text="消息中心" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/area_to_about"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="25dp"
                android:gravity="center|left">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_menu_about" />

                <TextView
                    style="@style/text_33315_style"
                    android:layout_marginLeft="12dp"
                    android:text="关于我们" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/area_to_setting"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="25dp"
                android:gravity="center|left">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_menu_settings" />

                <TextView
                    style="@style/text_33315_style"
                    android:layout_marginLeft="12dp"
                    android:text="设置" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>