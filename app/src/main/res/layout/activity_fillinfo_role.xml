<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <include layout="@layout/topbar_com" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/com_white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/com_border_margin"
                    android:layout_marginRight="@dimen/com_border_margin"
                    android:layout_marginTop="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="父母家人"
                        android:textColor="@color/g202020"
                        android:textSize="17sp" />

                    <ImageView
                        android:id="@+id/img_parents_ckb"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/icon_select_normal" />
                </RelativeLayout>

                <com.asuper.angelgroup.widget.gridview.GridViewForScrollView
                    android:id="@+id/gv_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/com_border_margin"
                    android:layout_marginRight="@dimen/com_border_margin"
                    android:layout_marginTop="30dp"
                    android:horizontalSpacing="15dp"
                    android:listSelector="#00000000"
                    android:numColumns="3"
                    android:paddingBottom="25dp"
                    android:verticalSpacing="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/com_white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/com_border_margin"
                    android:layout_marginRight="@dimen/com_border_margin"
                    android:layout_marginTop="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="关爱人士"
                        android:textColor="@color/g202020"
                        android:textSize="17sp" />

                    <ImageView
                        android:id="@+id/img_others_ckb"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/icon_select_normal" />
                </RelativeLayout>

                <com.asuper.angelgroup.widget.gridview.GridViewForScrollView
                    android:id="@+id/gv_label2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/com_border_margin"
                    android:layout_marginRight="@dimen/com_border_margin"
                    android:layout_marginTop="30dp"
                    android:horizontalSpacing="15dp"
                    android:listSelector="#00000000"
                    android:numColumns="3"
                    android:paddingBottom="25dp"
                    android:verticalSpacing="15dp" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_next"
                style="@style/btn_com_style"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"
                android:text="下一步" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>