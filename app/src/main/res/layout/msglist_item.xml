<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:minHeight="90dp"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <RelativeLayout
        android:id="@+id/user_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/img_user"
            android:layout_width="45dp"
            android:layout_height="45dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_user"
            android:layout_toLeftOf="@+id/img_first"
            android:layout_marginLeft="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_username"
                style="@style/text_33314_style"
                android:textColor="@color/g646287"
                android:text="清风徐来" />

            <LinearLayout
                android:id="@+id/comt_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_action"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:src="@drawable/icon_retweet"/>

                <TextView
                    android:id="@+id/tv_content"
                    style="@style/text_33314_style"
                    android:visibility="gone"
                    android:text="" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_time"
                style="@style/text_99912_style"
                android:layout_marginTop="10dp"
                android:text="2015-10-24" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_first"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/transparent" />

    <View
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine" />

</LinearLayout>