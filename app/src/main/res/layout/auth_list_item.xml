<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:background="@color/com_white"
    android:minHeight="65dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_relation_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="妈妈"
            android:textColor="@color/g333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_descr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="12dp"
            android:text="妈妈"
            android:textColor="@color/g999999"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_choosse"
        style="@style/me_item_arrow_style"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="12dp"
        android:src="@mipmap/icon_select_normal" />

    <TextView
        android:id="@+id/tv_final_person"
        style="@style/text_33314_style"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:text="本人"
        android:textColor="@color/main_green"
        android:visibility="gone" />

    <View
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/colorLine" />

</RelativeLayout>