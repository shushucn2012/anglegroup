<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/com_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/com_white"
        android:paddingLeft="@dimen/com_border_margin"
        android:paddingRight="@dimen/com_border_margin">

        <ImageView
            android:id="@+id/img_user_head"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_image" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_user_head"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_user_name"
                style="@style/text_33315_style"
                android:singleLine="true"
                android:text="王雪王雪王雪王雪王雪王雪王雪王雪王雪王雪王雪王雪王雪王雪王雪王雪王雪王雪" />

            <TextView
                android:id="@+id/tv_unit"
                style="@style/text_66613_style"
                android:layout_marginTop="3dp"
                android:singleLine="true"
                android:text="1231321313213" />
        </LinearLayout>
    </RelativeLayout>

    <View style="@style/hline_fill_top_margin" />

</LinearLayout>