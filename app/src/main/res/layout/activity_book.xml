<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <include layout="@layout/topbar_main_rightimage" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/com_white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/area_new_friends"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/com_border_margin"
            android:paddingRight="@dimen/com_border_margin">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/icon_new" />

            <TextView
                style="@style/text_33315_style"
                android:layout_marginLeft="10dp"
                android:text="新的朋友" />
        </LinearLayout>

        <View style="@style/hline_fill_top_margin" />

        <LinearLayout
            android:id="@+id/area_focus"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/com_border_margin"
            android:paddingRight="@dimen/com_border_margin">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/icon_fcous" />

            <TextView
                style="@style/text_33315_style"
                android:layout_marginLeft="10dp"
                android:text="我的关注" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="@color/transparent"
            android:divider="@color/transparent"
            android:dividerHeight="0dp"
            android:listSelector="@color/transparent" />

        <com.asuper.angelgroup.moduel.book.LetterIndexView
            android:id="@+id/letter_index_view"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="30dp" />

        <TextView
            android:id="@+id/show_letter_in_center"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:textSize="16sp"
            android:textColor="@color/com_white"
            android:background="@drawable/voip_toast_bg"
            android:gravity="center"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>